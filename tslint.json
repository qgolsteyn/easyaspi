{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single", "jsx-double", "avoid-escape"],
        "jsx-no-lambda": false,
        "no-console": false
    },
    "linterOptions": {
        "exclude": [
            "client/node_modules/**/*",
            "server/node_modules/**/*",
            "secrets/node_modules/**/*"
        ]
    },
    "rulesDirectory": []
}
