{
    "compilerOptions": {
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@shared": ["../../shared/index"],
            "@client/*": ["./*"]
        }
    }
}
