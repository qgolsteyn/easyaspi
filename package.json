{
    "name": "easyaspi",
    "private": true,
    "version": "1.0.0",
    "author": "Quentin Golsteyn <qgolsteyn@gmail.com>",
    "license": "MIT",
    "workspaces": [
        "server",
        "shared"
    ],
    "scripts": {
        "postinstall": "cd shared && yarn link && cd ../client && yarn link shared && yarn",
        "prestart": "yarn build:shared",
        "start": "concurrently \"cd server && yarn start\" \"cd client && yarn start\"",
        "build:shared": "cd shared && yarn build",
        "test": "yarn build:shared && jest",
        "test:coverage": "yarn build:shared && jest --coverage --detectOpenHandles --forceExit",
        "codecov": "codecov"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "codecov": "^3.6.1",
        "concurrently": "^4.1.2",
        "jest": "^24.9.0",
        "prettier": "^1.18.2",
        "ts-jest": "^24.1.0",
        "typescript": "^3.6.3"
    }
}
